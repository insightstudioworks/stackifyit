{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		},
		"declaration": true, // Enable declaration file generation
		"declarationMap": true, // Optional: generate sourcemaps for declarations
		"emitDeclarationOnly": false // Ensure it emits both .js and .d.ts files
	},
	"include": [
		"src/**/*",
		"index.ts"
	]
}